function _draw()
 cls()
 -- todo: background art?
 map(0,0,0,0)
 -- player
 spr(16,x*8,y*8)
 -- aim
 if state==1 then
  local s=17
  if(a_x==x and a_y==y) s=18
  spr(s,a_x*8,a_y*8)
 end
-- los_line(x,y,1,1,los_test,chk_wall)
 
 if(bullet_anim) draw_bullets()
 
 flip()
end

function draw_bullets()
 for b in all(bullets) do
  pset(b.x0,b.y0)
  b.x0+=b.vx
  b.y0+=b.vy
  b.dur-=1
  if(b.dur==0) del(bullets,b)
 end
 if(#bullets==0) bullet_anim=false
end

