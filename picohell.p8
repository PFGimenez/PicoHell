-- state:
-- 0: player turn
-- 1: player aim
-- 2: enemy turn7

function _init()
	x = 8
	y = 8
	state=0
end

function _draw()
 cls()
 map(0,0,0,0)
 spr(16,x*8,y*8)
 flip()
end

dep={{-1,0},{1,0},nil,{0,-1},
nil,nil,nil,{0,1}}

function _update()
 if state==0 then
  local b=btn()
  local d=dep[b]
  if d!=nil then
   print(d)
   local next_x=x+d[1]
   local next_y=y+d[2]
   if fget(mget(next_x,next_y))%2==0 then
    x=next_x
    y=next_y
    state=2
   end
  end
 end
end
